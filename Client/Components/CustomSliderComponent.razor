<style>
    .cards-wrapper {
        display: flex;
    }

    .card {
        margin: 0 10px;
        width: calc(100%/@(CardItemCount));
    }

    .images-wrapper {
        height: 22vw;
        dispaly: flex;
        justify-content: center;
        align-items: center;
    }

        .images-wrapper img {
            max-height: 100%;
            width: 100%;
        }
</style>


<div class="my-5">
    <div id="carouselExample" class="carousel carousel-dark slide">
        <div class="carousel-inner">

            @for(int i = 0; i <= 3; i++)
            {
                <div class="carousel-item @(i == 1 ? "active" : "")">
                    <div class="cards-wrapper">
                        <div class="card">
                            <div class="images-wrapper">
                                <img src="https://dummyimage.com/500x500/ccc/ccc" alt="img">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>

                        <div class="card">
                            <div class="images-wrapper">
                                <img src="https://dummyimage.com/500x450/ccc/ccc" alt="img">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>

                        <div class="card">
                            <div class="images-wrapper">
                                <img src="https://dummyimage.com/500x400/ccc/ccc" alt="img">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>
                </div>

            }


        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

</div>

@code {
    [Parameter]
    public int CardItemCount { get; set; } = 3;


}
